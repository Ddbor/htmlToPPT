{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // 由vite-plugin-dts生成类型，TS不主动输出
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@doc/*": ["doc/src/*"],
      "@lib/*": ["src/*"],
      "@lib": ["src/index.ts"]
    }
  },
  "include": ["src", "doc/src"],
  "exclude": ["node_modules", "dist", "doc-dist"]
}
